<div class="devise-container log-in">
  <h2><%= t(".title") %></h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  label: t(".email_label"),
                  required: true,
                  autofocus: true %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p><%= t(".waiting_confirmation") %> <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  label: t(".password_label"),
                  hint: t(".password_hint"),
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  label: t(".password_confirmation_label"),
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password,
                  label: t(".current_password_label"),
                  hint: t(".current_password_hint"),
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
    </div>

    <div class="form-actions flex-display">
      <%= f.button :submit, t(".update_button"), class: "btn btn-shape btn-green" %>
      <%= link_to t(".back_button"), :back, class: "btn btn-shape btn-green ms-2" %>
    </div>
  <% end %>

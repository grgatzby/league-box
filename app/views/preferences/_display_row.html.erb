<%#
  Display Row Partial
  Renders a read-only information row (label and value).
  Parameters:
    emoji: String emoji for the label
    label: Label text
    value: Value to display
    value_col: Bootstrap column class for value (default: "col-3")
%>
<% value_col = local_assigns[:value_col] || 'col-3' %>
<div class="row">
  <div class="col-4"><%= "#{emoji} #{label}:" %></div>
  <div class="<%= value_col %>"><%= value %></div>
</div>

<%# partial: display match scores for each player %>
<div class="row">
  <div class="col-2"><%= user_match_score.user.last_name %></div>
  <div class="col-1"><%= "#{user_match_score.score_set1}" %></div>
  <div class="col-1"><%= "#{user_match_score.score_set2}" %></div>
  <% if tiebreak > 0 %>
    <div class="col-1"><%= "#{user_match_score.score_tiebreak}" %></div>
  <% end %>
  <div class="col-2"><%= user_match_score.is_winner ? "winner" : "" %></div>
  <div class="col-2">+<%= t("pts", count: user_match_score.points) %></div>
  <div class="col-3">: <%= t("box_pts", count: user_box_score.points) %></div>
</div>

<div class = "container">
  <h4>Match <%= render "fullname", user: current_user %> vs <%= render "fullname", user: @opponent %></h4>
  <% players = [current_user, @opponent] %>
  <br><%= form_for @match do |f| %>
    <div class="row">
      <div class="col-sm-2"><%= f.label :court_id, "Match played on court: " %></div>
      <div class="col-sm-1"><%= f.select :court_id, 1..10, default: 1 %></div>
    </div>
    <br>
    <div class="row">
      <div class="col-sm-2">Date & time:</div>
      <div class="col-sm-3">
        <%= f.date_field(:time, min: @round.start_date, max: Time.now().to_s.slice(0,10) ) %>
        <%= f.time_select(:time, start_hour: 7, end_hour: 19, minute_step: 30, :time_separator => "") %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-sm-2"></div>
      <div class="col-sm-1">Set 1</div>
      <div class="col-sm-1">Set 2</div>
      <div class="col-sm-1">Tie-break</div>
    </div>
    <%= f.fields_for :user_match_scores do |user_match_score| %>
      <div class="row">
        <div class="col-sm-2"><%= render "fullname", user: players[user_match_score.index] %></div>
        <div class="col-sm-1"><%= user_match_score.select :score_set1, 0..4 %></div>
        <div class="col-sm-1"><%= user_match_score.select :score_set2, 0..4 %></div>
        <div class="col-sm-1"><%= user_match_score.select :score_tiebreak,['Na']+(0..25).to_a %></div>
      </div>
    <% end %>
    <br>
    <%= hidden_field_tag(:opponent_id, @opponent.id) %>
    <%= hidden_field_tag(:round_start, @round.start_date) %>
    <%= f.submit "Save scores", class: "btn button-purple" %>
  <% end %>
</div>

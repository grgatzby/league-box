<%# player: show match/user_match_scores details (called from boxes/manage_my_box.html.erb) %>
<div class="container">
  <% player_ubs = UserBoxScore.find_by(box_id: @match.box.id, user_id:current_user.id) %>
  <% opponent_ubs = UserBoxScore.find_by(box_id: @match.box.id, user_id:@opponent.id) %>
  <h3><%= render "shared/fullname", user: current_user %><%= "(# #{player_ubs.rank})" %> vs
  <%= render "shared/fullname", user: @opponent %><%= "(# #{opponent_ubs.rank})" %></h3>

  <div class="frame-shape home-wrap">
    <br><h4><%= render "match", my_card: @current_user_match_score %>by <%= render "shared/fullname", user: current_user %></h4>
    <br><%= "Match played on #{@match.time.strftime("%a %-d %h %y")}, #{@match.time.strftime("%H:%M")}, on court #{@match.court.name}." %>

    <br><br>
    <strong><%= "Score : " %></strong>
    <%= (render "shared/score", user_score: @current_user_match_score, opponent_score: @opponent_match_score).strip %>,
    <% ums =  UserMatchScore.find_by(match_id: @match.id, user_id: current_user.id) %>
    <% score_input_by = User.find(ums.input_user_id) %>
    <% message = "submitted on #{ums.input_date.strftime("%a %-d %h %y")}, #{ums.input_date.strftime("%H:%M")} by #{score_input_by.role} #{(render "shared/fullname", user: score_input_by).strip}." %>
    <span style="color:#336699"><%= message %></span>
    <br><br>
    <strong><%= "Points earned : " %></strong>
    <%= (render "shared/fullname", user: current_user).strip %>
    <%= ": #{pluralize @current_user_match_score.points, "point"} (#{pluralize player_ubs.points, "box pt"}) - " %>
    <%= (render "shared/fullname", user: @opponent).strip %>
    <%= ": #{pluralize @opponent_match_score.points, "point"} (#{pluralize opponent_ubs.points, "box pt"})." %>
    <br><br>
    <% name = "#{render "shared/fullname", user: @referee}" %>
    <% message = "📞 #{@referee.phone_number}<br />✉️#{@referee.email}" %>
    <div data-controller="popover" data-bs-html="true" data-bs-toggle="popover" data-bs-trigger="hover" data-bs-placement="right" title="<%= name %>" data-bs-content="<%= message %>">
      To challenge or edit this match score, please contact your club referee <%= (render "shared/fullname", user: @referee).strip %>.
    </div>
    <br>
  </div>
  <br>
  <div class="buttons-wrap">
    <%# link_to "Back to my box", manage_my_box_path(@my_current_box), class: "btn buttons-shape btn-blue" %>
    <%= link_to "Back to my box", manage_my_box_path(@match.box), class: "btn buttons-shape btn-blue" %>
  </div>
</div>

<div class="container">
  <h4><%= render "fullname", user: current_user %> vs <%= render "fullname", user: @opponent %></h4>
  <br><%= render "match", my_card: @current_user_match_score %>
  <br><%= "Played on #{@match.time.strftime("%d/%m/%Y")} (court #{@match.court.name})" %>
  <br>
  <%= "Score : #{@current_user_match_score.score_set1}/#{@opponent_match_score.score_set1}" %>
  <%= "#{@current_user_match_score.score_set2}/#{@opponent_match_score.score_set2}" %>
  <% if @current_user_match_score.score_tiebreak + @opponent_match_score.score_tiebreak != 0%>
    <%= "(#{@current_user_match_score.score_tiebreak}/#{@opponent_match_score.score_tiebreak})" %>
  <% end %>
  <br>
  <%= render "fullname", user: current_user %><%= "#{@current_user_match_score.points} pts," %>
  <%= render "fullname", user: @opponent %><%= "#{@opponent_match_score.points} pts." %>
  <br><br><%= link_to "Back to my box", mybox_path(current_user.user_box_scores[0].box), class: "btn button-purple" %>
</div>

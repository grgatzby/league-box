<%# Rules section partial %>
<div class="rules-section-item mb-3">
  <div class="rules-section-header-modern" data-action="click->toggle#toggleSection" data-section="<%= section_number %>">
    <h3 class="mb-0 d-flex align-items-center gap-3">
      <i class="<%= icon_class %> rules-section-icon"></i>
      <b class="cursor-pointer flex-grow-1"><%= t("pages.rules#{translation_key}") %></b>
      <span class="rules-section-arrow">⬇️</span>
    </h3>
  </div>
  <div class="rules-section-content-modern d-none" data-toggle-target="section<%= section_number %>">
    <div class="rules-section-body-modern mt-3">
      <%= render partial_name %>
    </div>
  </div>
</div>
<hr class="rules-section-divider">

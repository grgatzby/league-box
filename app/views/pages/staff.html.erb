<div>
  <div class="container">
    <br><h3><%= @club.name %> League Box</h3>
    <div class="form-wrap">
      <h4>Club staff</h4>
        <br>
        <div class="row">
          <div class="col-sm-2">Name</div>
          <div class="col-sm-1"></div>
          <div class="col-sm-4"><%= "✉️" %></div>
          <div class="col-sm-2"><%= "📞" %></div>
          <% if current_user == @admin %>
            <div class="col-sm-2"><%= "Club" %></div>
          <% end %>
        </div>
        <div class="row">
          <div class="col-sm-2"><%= render "shared/fullname", user: @admin%></div>
          <div class="col-sm-5"><%= "#{@admin.email} (admin)" %></div>
          <div class="col-sm-3"><%= "#{@admin.phone_number}" %></div>
        </div>
          <% if current_user == @admin %>
            <% @managers.each do |manager| %>
              <div class="row">
                <div class="col-sm-2"><%= render "shared/fullname", user: manager%></div>
                <div class="col-sm-5"><%= "#{manager.email} (manager)" %></div>
                <div class="col-sm-2"><%= "#{manager.phone_number}" %></div>
                <div class="col-sm-2"><%= "#{manager.club.name}" %></div>
              </div>
            <% end %>
          <% end %>
        <% if @manager %>
          <div class="row">
            <div class="col-sm-2"><%= render "shared/fullname", user: @manager%></div>
            <div class="col-sm-5"><%= "#{@manager.email} (Club manager)" %></div>
            <div class="col-sm-3"><%= "#{@manager.phone_number}" %></div>
          </div>
        <% end %>
        <br>
    </div>
    <br>
    <div class = "buttons-wrap">
      <%= link_to "Home", root_path, class: "btn button-flat" %>
      <%= link_to "Tournament overview", overview_path, class: "btn button-flat" %>
      <%= link_to "View all boxes", boxes_path, class: "btn button-flat" %>
      <% if current_user %>
        <% if current_user.role == "player" %>
          <%# passing 0 to manage_my_box_path, forces user to chose a round%>
          <%= link_to "Enter my results", manage_my_box_path(0), class: "btn button-flat" %>
        <% end %>
      <% else %>
        <%= link_to "Log in to enter match results", new_user_session_path, class: "btn button-flat" %>
      <% end %>
    </div>
  </div>
  <br><br>
</div>

    <b><%= club.name %></b>
    <span class="badge bg-secondary ms-2">
      <%= image_count %> <%= t("gallery_images.index.images_count", count: image_count) %>
    </span>
  </h5>
  <%= render "gallery_images/gallery", gallery_images: gallery_images %>
</div>

<%= render "shared/image_front", sticky: false %>

<div class="container" data-controller="toggle">
  <div class="frame-shape home-wrap text-size box-scroller" data-toggle-target="togglableElement" data-action="scroll->toggle#scrollFunction" >
    <br><h3><%= t(".sitemap_title").upcase %></h3>
    <br><h5><%= t '.home' %></h5>
    <p><%= t '.p01' %></p>

    <br><h5><%= t '.overview_rules' %></h5>
    <p><%= t '.p03' %></p>

    <br><h5><%= t '.club_staff' %></h5>
    <p><%= t '.p05' %></p>

    <br><h5><%= t '.all_boxes' %></h5>
    <p><%= t '.p07' %></p>
    <ul>
      <li><%= t '.li01' %></li>
      <li><%= t '.li02' %></li>
      <li><%= t '.li03' %></li>
      <li><%= t '.li04' %></li>
    </ul>
    <p><%= t '.p08_html' %></p>
    <p>
      <% if current_user && current_user.role != "player" %>
        <%= t '.p09a' %>
      <% else %>
        <%= t '.p09b' %>
      <% end %>
      <% if current_user && current_user.role == "admin" %>
        <%= t '.p10a_html' %>
      <% end %>
    </p>
    <br><h5><%= t '.league_table' %></h5>
    <p><%= t '.p11_html' %></p>
    <p><%= t '.p12' %></p>

    <% if current_user && current_user.role != "player" %>
      <br><h5><%= t '.referee_view' %></h5>
      <p><%= t '.p14_html' %></p>
      <p><%= t '.p15' %></p>

    <% else %>
      <br><h5><%= t '.table_view' %></h5>
      <p><%= t '.p16' %></p>
      <p><%= t '.p17_html' %></p>

      <br><h5><%= t '.list_view' %></h5>
      <p><%= t '.p19_html' %></p>
      <p><%= t '.p20_html' %></p>

      <br><h5><%= t '.manage_my_box' %></h5>
      <p><%= t '.p22_html' %></p>
      <p><%= t '.p23' %></p>
    <% end %>

    <br><h5><%= t '.match_results' %></h5>
    <p><%= t '.p24' %>
    <ul>
      <li><%= t '.li05' %></li>
      <li><%= t '.li06' %></li>
      <li><%= t '.li07' %></li>
    </ul></p>

    <br><h5><%= t '.new_match_score' %></h5>
    <p><%= t '.p25' %></p>

    <% if current_user && current_user.role != "player" %>
      <br><h5><%= t '.match_edit_score' %></h5>
      <p><%= t '.p26' %></p>
    <% end %>

    <button  data-action="click->toggle#scrollToTop" data-toggle-target="topButton"
      class="btn buttons-shape btn-blue button-top d-none"><i class="fa-solid fa-up-long"></i>
    </button>
  </div>


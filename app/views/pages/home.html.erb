<%= render "shared/image_front" %>

<div class="container" data-controller="toggle">
  <div class="frame-color-shape frame-margin-rl frame-padding text-size box-scroller"
       data-toggle-target="togglableElement" >
    <br><h4><div class="title"><b><%= t(".main_title").upcase %></b></div></h4><br>
    <h5><%= t '.welcome_title' %></h5>
    <p><%= t '.p01' %></p>
    <p><%= t '.p02' %></p>
    <p><%= t '.p03' %></p>
    <br>

    <br><h5 class="top-bottom-padding"><%= t '.use_title' %></h5>
    <p><%= t '.p06' %></p>
    <ol>
    <% if !current_user %>
      <% (1..4).each do |i| %>
        <li class="top-bottom-padding"><%= t ".li#{format('%02d', i)}_html" %></li>
      <% end %>
    <% else %>
      <li class="top-bottom-padding"><%= t(".li05_html", my_scores_path: my_scores_path(@box ? @box : 0)) %></li>
      <li class="top-bottom-padding"><%= t(".li06_html", boxes_path: boxes_path) %></li>
      <li class="top-bottom-padding"><%= t(".li07_html", box_path: box_path(@box ? @box : 0), box_list_path: box_list_path(@box ? @box : 0)) %></li>
      <li class="top-bottom-padding"><%= t(".li08_html", user_box_scores_path: user_box_scores_path) %></li>
    <% end %>
    </ol><br>

    <br><h5 class="top-bottom-padding"><%= t '.how_title' %></h5>
    <p><%= t '.p04' %></p>
    <ol>
      <% (9..12).each do |i| %>
        <li class="top-bottom-padding"><%= t ".li#{format('%02d', i)}_html" %></li>
      <% end %>
    </ol>
    <p><%= t '.p05_html' %></p>
    <br>
    <br><h5><%= t '.happy_tournament' %></h5>

    <button  data-action="click->toggle#scrollToTop" data-toggle-target="topButton"
      class="btn buttons-shape btn-beige top-button d-none"><i class="fa-solid fa-up-long"></i>
    </button>
  </div>

  <br><div class = "buttons-wrap">
    <% if current_user == @admin %>
      <%= link_to t('.add_club_btn'), new_user_box_score_path, class: "btn buttons-shape btn-aqua" %>
    <% end %>
  </div>
</div>

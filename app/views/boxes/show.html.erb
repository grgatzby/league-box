<div class="container">
  <h3>
    <%= "Box #{@box.box_number}" %>
    <% if current_user.user_box_scores[0].box == @box %>(<%= render "fullname", user: current_user %>)<% end %>
  </h3>
  <div class = "form-wrap">
    <div class="grid-container row">

      <div id="first-column" class="col-1">
        <div class="row" id="1st-col-header">
          <div class="col-12"><%= "Box #{@box.box_number}" %></div>
        </div>
        <% sorted_players = @box_matches.map { |x| x[2]} %>
        <% @box_matches.each do |user_box_matches| %>
          <div class="row first-col-lines">
            <div class="col-12">
              <% user_box_score = user_box_matches[0] %>
              <% player = user_box_score.user %>
              <span style=<%=user_box_matches[0].user == current_user ? "color:blue" : ""%>>
                <%= render "fullname", user: player %><br>[<%= pluralize user_box_score.points, "pt" %>]
              </span>
            </div>
          </div>
        <% end %>
      </div>

      <div id="players-columns" class="col-11">
        <div class="row" id="grid-headers">
          <% @box_matches.each do |user_box_matches| %>
            <div class="col-2 text-center">
              <% user_box_score = user_box_matches[0] %>
              <% player = user_box_score.user %>
              <span style=<%=user_box_matches[0].user == current_user ? "color:blue" : ""%>>
                <%= render "fullname", user: player %>
              </span>
            </div>
          <% end %>
        </div>
        <div id="grid-lines">
          <% @box_matches.each do |user_box_matches| %>
            <div class="row">
              <% user_box_score = user_box_matches[0] %>
              <% player = user_box_score.user %>
              <% player_matches = user_box_matches[1] %>
              <% player_matches.sort_by! { |x| sorted_players.index(x[1]) } %>
              <% sorted_players.each do |player2| %>
                <% player_match = player_matches.select { |x| x[1] == player2 }[0] %>
                <div class="col-2 text-center">
                <span class="align-middle">
                  <% if player_match %>
                    <% match = player_match[0] %>
                    <% opponent = player_match[1] %>
                    <% user_score = player_match[2] %>
                    <% opponent_score = player_match[3] %>
                    <% if match %>
                      <%= "#{match.time.strftime("%d %b")}" %>
                      <%= render "score", user_score: user_score, opponent_score: opponent_score %>
                      <br><%= "#{player.last_name}: " %><%= pluralize user_score.points, "pt" %>
                      <span style="color:grey">
                        <br><%= "#{opponent.last_name}: " %><%= pluralize opponent_score.points, "pt" %>
                      </span>
                    <% elsif opponent == player %>
                      <br><%= "-" %>
                    <% end %>
                  <% else %>
                    <span style="color:grey"><br><%= "not played" %></span>
                  <% end %>
                </span>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <br>
  <div class="buttons-wrap">
    <%= link_to "Back", "javascript:history.back()", class: "btn button-purple" %>
    <%= link_to "List view", show_list_path, class: "btn button-purple" %>
  </div>
</div>

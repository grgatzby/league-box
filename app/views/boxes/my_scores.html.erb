<!-- player page to view own match results, enter new scores -->
<div class="container text-size">
  <% if !@is_mobile %><br><% end %>
  <%# <div class="one-liner"> %>
  <div>
    <h3><%= t '.my_scores' %></h3>
    <% if @box %>
      <% @round = @box.round %>
    <% else %>
      <%# render "shared/select_club_round", fallback_path: my_scores_path, explain_paragraph: t(".intro") %>
      <%= render "explain_page", explain_paragraph: t(".intro_html") %>
    <% end %>
  </div>
  <% if @round %>
    <% if @user_not_in_round %>
      <br><br><h4><%= render "shared/fullname", user: @current_player %><%= t '.not_in_round' %></h4>
    <% else %>
      <div class="one-liner">
        <h4><%= render "shared/display_club",
            round: @box.round,
            add_text: "#{render "shared/fullname", user: @current_player} - box #{@box.box_number}" %>
        </h4>
        <div>
          <%# <% @page_from ||= box_list_path %>
          <% if @page_from %>
            <% parameters = "?round_start=#{@box.round.start_date}&club_name=#{@box.round.club.name}" %>
            <%= link_to @page_from+parameters, class: "btn buttons-shape btn-yellow mb-3" do %>
              <i class="fa-solid fa-left-long"></i>
            <% end %>
          <% else %>
            <%= link_to :back, class: "btn buttons-shape btn-yellow mb-3" do %>
              <i class="fa-solid fa-left-long"></i>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="<%=class_names( "frame-color-shape players frame-padding",
                                  "mobile-text-size": @is_mobile)%>">
        <h4><%= t '.view_enter_scores' %></h4>
        <div class="row justify-content-center top-bottom-padding bold-font">
          <div class="col-3"><%= t '.player_header' %></div>
          <div class="col-2"><%= t '.total_points_header' %></div>
          <div class="col-2"><%= t '.played_on_header' %></div>
          <div class="col-2"><%= t '.action_header' %></div>
        </div>
        <% @my_games.each do |my_game|
          opponent = my_game[0].user
          match = my_game[1] %>

          <div class="row justify-content-center">
            <div class="col-3 top-bottom-padding">
              <% opponent_name = "#{render "shared/fullname", user: opponent}" %>
              <% message = "📞 #{opponent.phone_number}<br />✉️ #{opponent.email}" %>
              <div class="mb-4" data-controller="popover" data-bs-html="true" data-bs-toggle="popover"
                  data-bs-trigger="hover" data-bs-placement="bottom" data-bs-delay= '{ "show": 500 }'
                  title="<%= opponent_name %>" data-bs-content="<%= message %>">
                <span style=<%=opponent == @current_player ? "color:#c60407" : "" %>>
                  <%= "#{render "shared/fullname", user: opponent}" %>
                </span>
              </div>
            </div>
            <div class="col-2 top-bottom-padding">
                <%= t("pts", count: my_game[0].points) %>
            </div>
            <div class="col-2 top-bottom-padding">
              <% if match && opponent != @current_player %>
                <%= "#{l(match.time, format: :wwwddmmmyy_date)}" %>
              <% end %>
            </div>
            <div class="col-2">
              <% class_btns = class_names( "btn btn-ghost", "mobile-text-size": @is_mobile, "text-size": !@is_mobile) %>
              <% if opponent == @current_player %>
                <%= link_to t(".view_box_results_btn"), box_list_path, class: class_btns %>
              <% elsif match %>
                <%= link_to t(".see_match_card_btn"), match_path(player: current_user.id, opponent: opponent.id, match: match.id, page_from: my_scores_path), class: class_btns %>
              <% else %>
                <%= link_to t(".enter_score_btn"), new_match_path(player: current_user.id, opponent: opponent.id, round: @round.id, page_from: my_scores_path), class: class_btns %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div><br>
      <div class="frame-color-shape players frame-padding">
        <h4><%= t '.chat_in_my_box' %></h4>
        <div class="buttons-wrap">
          <% class_btns = class_names( "btn buttons-shape btn-yellow", "mobile-text-size": @is_mobile, "text-size": !@is_mobile) %>
          <%= link_to t(".access_chatroom_btn"), chatroom_path(@chatroom), class: class_btns %>
        </div>
      </div>
    <% end %>
    <br>
    <!--
    <div class="buttons-wrap">
      <% if @page_from %>
        <% parameters = "?round_start=#{@box.round.start_date}&club_name=#{@box.round.club.name}" %>
        <%= link_to "Back", @page_from+parameters, class: "btn buttons-shape btn-yellow text-size" %>
      <% else %>
        <%# link_to "Back", "javascript:history.back()", class: "btn buttons-shape btn-yellow" %>
        <%= link_to "Back", :back, class: "btn buttons-shape btn-yellow text-size" %>
        <%= link_to "Back to top", "#", class: "btn buttons-shape btn-yellow text-size" %>
      <% end %>
    </div>
    -->
  <% end %>
</div>

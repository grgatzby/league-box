<%# Club section partial for gallery images %>
<div class="mb-4">
  <h5 class="mb-3" style="border-bottom: 2px solid #007bff; padding-bottom: 10px;">
    <b><%= club == @sample_club ? t("gallery_images.index.admin_album") : club.name %></b>
    <span class="badge bg-secondary ms-2"><%= gallery_images.count %> <%= t("gallery_images.index.images_count", count: gallery_images.count) %></span>
  </h5>
  <div class="row g-3">
    <% gallery_images.each do |gallery_image| %>
      <%= render "gallery_image_card", gallery_image: gallery_image %>
    <% end %>
  </div>
</div>
